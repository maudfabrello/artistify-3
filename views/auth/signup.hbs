<form method="post" action="/auth/signup" class="form">
    {{> flashMessage }}

    <label for="name">Username</label>
    <input class="input" type="text" id="name" name="userName" value="test name">
    <label for="email">email</label>
    <input class="input" type="email" id="email" name="email" value="test@email.com">
    <label for="password">password</label>
    <input class="input" type="password" id="password" name="password" value="12345">
    <label for="role">Role</label>
    <select name="role" id="role">
        <option value="admin">Admin</option>
        <option value="user" selected>User</option>
    </select>
    <button class="btn" type="submit">signup</button>
</form>
<p>
    Already got an account ? <a href="/auth/signin">signin</a>
</p>